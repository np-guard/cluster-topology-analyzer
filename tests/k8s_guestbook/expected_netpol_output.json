[
    {
        "kind": "NetworkPolicy",
        "apiVersion": "networking.k8s.io/v1",
        "metadata": {
            "name": "frontend-netpol",
            "namespace": "default",
            "creationTimestamp": null
        },
        "spec": {
            "podSelector": {
                "matchLabels": {
                    "app": "guestbook",
                    "tier": "frontend"
                }
            },
            "ingress": [
                {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ]
                }
            ],
            "egress": [
                {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 6379
                        }
                    ],
                    "to": [
                        {
                            "podSelector": {
                                "matchLabels": {
                                    "app": "redis",
                                    "role": "follower",
                                    "tier": "backend"
                                }
                            },
                            "namespaceSelector": {
                                "matchLabels": {
                                    "kubernetes.io/metadata.name": "redis"
                                }
                            }
                        }
                    ]
                },
                {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 6379
                        }
                    ],
                    "to": [
                        {
                            "podSelector": {
                                "matchLabels": {
                                    "app": "redis",
                                    "role": "leader",
                                    "tier": "backend"
                                }
                            },
                            "namespaceSelector": {
                                "matchLabels": {
                                    "kubernetes.io/metadata.name": "redis"
                                }
                            }
                        }
                    ]
                },
                {
                    "ports": [
                        {
                            "protocol": "UDP",
                            "port": 53
                        }
                    ]
                }
            ],
            "policyTypes": [
                "Ingress",
                "Egress"
            ]
        }
    },
